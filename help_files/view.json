{
    "name": "view",
    "about": "Views template data and metadata informations",
    "parents": ["tp"],
    "args": {
        "inputs": [
            {
                "name": "temp-name",
                "help": "Sets the template name",
                "required": true
            }
        ],
        "options": [
            {
                "long": "file",
                "value_name": "filename",
                "help": "Sets the template file to display"
            }
        ],
        "flags": [
            {
                "long": "desc",
                "help": "Shows the template description"
            },
            {
                "long": "created-at",
                "help": "Shows the template creation date"
            },
            {
                "long": "updated-at",
                "help": "Shows the template update date"
            },
            {
                "long": "paths",
                "help": "Shows the template paths"
            },
            {
                "long": "args",
                "help": "Shows the template args"
            }
        ]
    }
}